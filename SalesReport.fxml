<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.newfoundsoftware.pos.SalesReportController"
            prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: #FDEFE5;">
    
    <!-- TOP: Header -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #92709A; -fx-padding: 20;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <children>
                        <Label text="ðŸ“Š SALES REPORT" textFill="WHITE">
                            <font>
                                <Font name="Arial Rounded MT Bold" size="24.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnRefresh" text="ðŸ”„ Refresh" onAction="#handleRefresh"
                                style="-fx-background-color: white; -fx-text-fill: #92709A; -fx-font-weight: bold; -fx-padding: 10 20;" />
                    </children>
                </HBox>
                
                <!-- Summary Cards -->
                <HBox spacing="15" alignment="CENTER">
                    <children>
                        <!-- Total Sales Card -->
                        <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;" prefWidth="200">
                            <children>
                                <Label text="Total Sales" style="-fx-font-size: 12; -fx-text-fill: #666;" />
                                <Label fx:id="lblTotalSales" text="â‚±0.00" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" />
                            </children>
                        </VBox>
                        
                        <!-- Total Items Sold Card -->
                        <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;" prefWidth="200">
                            <children>
                                <Label text="Items Sold" style="-fx-font-size: 12; -fx-text-fill: #666;" />
                                <Label fx:id="lblTotalItems" text="0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2196F3;" />
                            </children>
                        </VBox>
                        
                        <!-- Total Transactions Card -->
                        <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;" prefWidth="200">
                            <children>
                                <Label text="Transactions" style="-fx-font-size: 12; -fx-text-fill: #666;" />
                                <Label fx:id="lblTotalTransactions" text="0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #FF9800;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    
    <!-- CENTER: Table and Filters -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <children>
                <!-- Filters -->
                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                    <children>
                        <Label text="Filter by Date:" style="-fx-font-weight: bold;" />
                        <DatePicker fx:id="dateFrom" promptText="From" prefWidth="150" />
                        <Label text="to" />
                        <DatePicker fx:id="dateTo" promptText="To" prefWidth="150" />
                        
                        <Label text="Product:" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtSearchProduct" promptText="Search product..." prefWidth="200" />
                        
                        <Button text="Apply Filter" onAction="#handleApplyFilter" 
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" />
                        <Button text="Clear" onAction="#handleClearFilter" 
                                style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" />
                    </children>
                </HBox>
                
                <!-- Sales Table -->
                <VBox spacing="10" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                    <children>
                        <Label text="Sales Transactions" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                        
                        <TableView fx:id="salesTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colDate" text="Date" prefWidth="150" />
                                <TableColumn fx:id="colProduct" text="Product" prefWidth="300" />
                                <TableColumn fx:id="colQty" text="Quantity" prefWidth="100" />
                                <TableColumn fx:id="colPrice" text="Unit Price" prefWidth="120" />
                                <TableColumn fx:id="colTotal" text="Total" prefWidth="150" />
                                <TableColumn fx:id="colCategory" text="Category" prefWidth="120" />
                            </columns>
                        </TableView>
                        
                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <children>
                                <Label text="Showing records:" style="-fx-font-weight: bold;" />
                                <Label fx:id="lblRecordCount" text="0" style="-fx-font-weight: bold; -fx-text-fill: #92709A;" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
    
</BorderPane>